<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_android_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_android_contact_phoneNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview_android_contact_name"
        android:layout_below="@+id/textview_android_contact_name"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        android:text="PhoneNo"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/textview_android_contact_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_android_contact_phoneNr"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textview_android_contact_name"
        android:text="id" />
</RelativeLayout>