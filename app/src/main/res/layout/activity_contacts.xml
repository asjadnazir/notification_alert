<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asjad.notificationalert.ContactsActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/contacts_page_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLoad_AndroidContacts"
        android:layout_marginTop="52dp"
        android:text="Android Contacts.."
        android:id="@+id/textView3" />

    <Button
        android:id="@+id/btnLoad_AndroidContacts"
        android:layout_width="157dp"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_below="@+id/contacts_page_toolbar"
        android:layout_marginStart="11dp"
        android:onClick="btnLoad_AndroidContacts_onClick"
        android:text="Load" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview_Android_Contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLoad_AndroidContacts"
        android:layout_marginTop="75dp"
        android:choiceMode="singleChoice" />

    <Button
        android:id="@+id/contacts_new_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_page_toolbar"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/btnLoad_AndroidContacts"
        android:text="New Group" />

</RelativeLayout>
