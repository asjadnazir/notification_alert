<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/message_body_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_text_background"
        android:padding="14dp">

        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:minEms="4"
            android:text="@string/message" />

        <ImageView
            android:id="@+id/message_sent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:maxWidth="25dp"
            app:srcCompat="@drawable/alert" />

    </RelativeLayout>

    <TextView
        android:id="@+id/message_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/message_body_layout"
        android:layout_below="@+id/message_body_layout"
        android:layout_marginTop="13dp"
        android:text="@string/time" />


</RelativeLayout>