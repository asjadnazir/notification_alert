<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asjad.notificationalert.CreategroupdoneActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/create_group_done_page_toolbar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/create_group_name_edit_text"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <EditText
        android:id="@+id/create_group_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Group Name"
        android:inputType="textCapSentences" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_group_done_page_toolbar"
        android:layout_marginStart="27dp"
        android:layout_marginTop="23dp"
        android:text="Type group name here..." />
</RelativeLayout>
